extends base.pug


block scripts
  script(src='/static/index.min.js')


block main
  p group count #{data.group_count}
  p item count #{data.item_count}

  ul
    each group in data.groups
      li
        a(href="/group/" + group._id) #{group.name}
    else
      li There are no groups.

  form(action="/group/add/_/" method="post")
    h3 Add group
    label(for="name") Name
    input(id="name" type="text" name="name")
    input(type="submit" value="create")
